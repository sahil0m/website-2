<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mechanical Engineering</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,600,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <!-- Header Section -->
    <section class="sub-header">
        {{> navbar}}
        <h1>Mechanical Engineering</h1>
    </section>
    
    <!-- ME Content Section -->
    <section class="about-us">
        <div class="search-bar">
            <h2>FIRST YEAR (ME)</h2>
            <div class="search-option">
                <i class="fa fa-search"></i>
                <span>Search</span>
            </div>
        </div>
        
        <div class="youtube-links">
            <div class="links-grid">
                <div class="item">
                    <iframe src="https://www.youtube.com/embed/T-zhwjuCDvg" frameborder="0"></iframe>
                </div>
                <div class="item">
                    <iframe src="https://www.youtube.com/embed/WG6H2pISUzQ" frameborder="0"></iframe>
                </div>
                <div class="item">
                    <iframe src="https://www.youtube.com/embed/2Eqe7jPv-Bw" frameborder="0"></iframe>
                </div>
            </div>
        </div>
        
        <div class="subject-grid">
            <div class="grid-content">
                <div class="item1">
                    <img src="assets/thermodynamicsme.jpg" alt="Engineering Thermodynamics">
                    <h3><a href="https://youtu.be/DRWYmaqkbX8">Engineering Thermodynamics</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/physicsme.jpg" alt="Physics for Engineering">
                    <h3><a href="https://youtu.be/BGMUh31lc7k">Physics for Engineering</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/cpme.jpg" alt="Computer Programming">
                    <h3><a href="https://www.youtube.com/live/tUDr-4sVOf4">Computer Programming</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/sesorme.jpg" alt="Sensors and IOT">
                    <h3><a href="https://youtu.be/pTB0EiLXUC8">Introduction to Sensors, Actuators and IOT</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/matlabme.jpg" alt="Matlab">
                    <h3><a href="https://youtu.be/WQoB2z67hvY">Matlab</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/graphicsme.jpg" alt="Engineering Graphics">
                    <h3><a href="https://youtu.be/bQZk18rke2o">Engineering Graphics</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/elementme.jpg" alt="Elements of Manufacturing">
                    <h3><a href="https://www.youtube.com/watch?v=-o3AxdVcUtQ">Elements of Manufacturing</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/mechme.jpg" alt="Engineering Mechanics">
                    <h3><a href="https://youtu.be/O0gtKDu_cJc">Engineering Mechanics</a></h3>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    {{> footer}}
    
    <!-- JavaScript for Toggle Menu -->
    <script>
        var navLinks = document.getElementById("navLinks");

        function showMenu() {
            navLinks.style.right = "0";
        }

        function hideMenu() {
            navLinks.style.right = "-200px";
        }
    </script>
</body>
</html>
