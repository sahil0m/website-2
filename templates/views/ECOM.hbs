<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Electronics and Computer Engineering</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,600,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <!-- Header Section -->
    <section class="sub-header">
        {{> navbar}}
        <h1>Electronics & Computer Engineering</h1>
    </section>
    
    <!-- ECE Content Section -->
    <section class="about-us">
        <div class="search-bar">
            <h2>FIRST YEAR (ECE)</h2>
            <div class="search-option">
                <i class="fa fa-search"></i>
                <span>Search</span>
            </div>
        </div>
        
        <div class="youtube-links">
            <div class="links-grid">
                <div class="item">
                    <iframe src="https://www.youtube.com/embed/Vd2UJiIPbag" frameborder="0"></iframe>
                </div>
                <div class="item">
                    <iframe src="https://www.youtube.com/embed/OET0qwat15o" frameborder="0"></iframe>
                </div>
                <div class="item">
                    <iframe src="https://www.youtube.com/embed/O0gtKDu_cJc" frameborder="0"></iframe>
                </div>
            </div>
        </div>
        
        <div class="subject-grid">
            <div class="grid-content">
                <div class="item1">
                    <img src="assets/beee.jpg" alt="Basic Electronics">
                    <h3><a href="https://youtu.be/DRWYmaqkbX8">Basic Electronics and Electrical Engineering</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/cpme.jpg" alt="Calculus for Engineers">
                    <h3><a href="https://youtu.be/BGMUh31lc7k">Calculus for Engineers</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/ddl.jpg" alt="Digital Logic Design">
                    <h3><a href="https://www.youtube.com/live/tUDr-4sVOf4">Digital Logic Design</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/electromagnetism.jpg" alt="Electromagnetism">
                    <h3><a href="https://youtu.be/pTB0EiLXUC8">Electromagnetism</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/c_program.jpg" alt="C Programming">
                    <h3><a href="https://youtu.be/WQoB2z67hvY">C Programming</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/linear.jpg" alt="Linear Algebra">
                    <h3><a href="https://youtu.be/bQZk18rke2o">Linear Algebra</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/dsa.jpg" alt="Data Structures and Algorithms">
                    <h3><a href="https://www.youtube.com/watch?v=-o3AxdVcUtQ">Data Structures and Algorithms</a></h3>
                </div>
                <div class="item1">
                    <img src="assets/differ.jpg" alt="Ordinary Differential Equation">
                    <h3><a href="https://youtu.be/O0gtKDu_cJc">Ordinary Differential Equation</a></h3>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    {{> footer}}
    
    <!-- JavaScript for Toggle Menu -->
    <script>
        var navLinks = document.getElementById("navLinks");

        function showMenu() {
            navLinks.style.right = "0";
        }

        function hideMenu() {
            navLinks.style.right = "-200px";
        }
    </script>
</body>
</html>
